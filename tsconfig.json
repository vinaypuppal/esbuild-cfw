{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"],
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "types": ["@cloudflare/workers-types", "@types/jest"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules/", "tests", "dist"]
}
